{
  "Comment": "State Machine for job",
  "StartAt": "VerifyInput",
  "States": {
    "VerifyInput": {
      "Type": "Choice",
      "Choices": [
        {
          "And": [
            {
              "Variable": "$.job_iteration_count",
              "IsPresent": true
            },
            {
              "Variable": "$.job_iteration_count",
              "IsNumeric": true
            },
            {
              "Variable": "$.max_parallel_executions",
              "IsPresent": true
            },
            {
              "Variable": "$.max_parallel_executions",
              "IsNumeric": true
            },
            {
              "Variable": "$.query_batch_size",
              "IsPresent": true
            },
            {
              "Variable": "$.query_batch_size",
              "IsNumeric": true
            }
          ],
          "Next": "InsertJobStatsForInstance"
        }
      ],
      "Default": "GenerateDefaultInput"
    },
    "GenerateDefaultInput": {
      "Type": "Pass",
      "Parameters": {
        "job_iteration_count": 1,
        "max_parallel_executions": 2,
        "query_batch_size": 100
      },
      "Next": "InsertJobStatsForInstance"
    },
    "InsertJobStatsForInstance": {
      "Type": "Task",
      "TimeoutSeconds": 15,
      "Resource": "arn:aws:states:::dynamodb:putItem",
      "Parameters": {
        "TableName": "JobStats",
        "Item": {
          "Id": {
            "S.$": "$$.Execution.Id"
          },
          "JobId": {
            "S.$": "$$.Execution.Id"
          },
          "Status": {
            "S": "Started"
          },
          "StartTime": {
            "S.$": "$$.Execution.StartTime"
          },
          "EndTime": {
            "S": ""
          },
          "TotalDocsProcessed": {
            "N": "0"
          },
          "TotalDocsQueried": {
            "N": "0"
          },
          "IterationCount": {
            "N.$": "States.Format('{}', $.job_iteration_count)"
          }
        }
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "IdentifyNamespacesToQuery"
    },
    "UpdateJobStatsForInstance": {
      "Type": "Task",
      "TimeoutSeconds": 15,
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "JobStats",
        "Key": {
          "JobId": {
            "S.$": "$$.Execution.Id"
          }
        },
        "UpdateExpression": "SET IterationCount = :val1",
        "ExpressionAttributeValues": {
          ":val1": {
            "N.$": "States.Format('{}', $.job_iteration_count)"
          }
        }
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "IdentifyNamespacesToQuery"
    },
    "IdentifyNamespacesToQuery": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:InitializeNamespaceList",
        "Payload": {
          "job_iteration_count.$": "$.job_iteration_count"
        }
      },
      "TimeoutSeconds": 300,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "ResultSelector": {
        "namespaces.$": "$.Payload.namespace_list"
      },
      "ResultPath": "$.namespace_list_to_query",
      "Next": "QueryEligibleNamespaces"
    },
    "QueryEligibleNamespaces": {
      "Type": "Map",
      "ItemsPath": "$.namespace_list_to_query.namespaces",
      "ResultPath": "$.namespaces_summary",
      "Parameters": {
        "namespace.$": "$$.Map.Item.Value",
        "max_parallel_executions.$": "$.max_parallel_executions",
        "query_batch_size.$": "$.query_batch_size"
      },
      "Iterator": {
        "StartAt": "GetTotalDocsInNamespaceAndCreateBatchesForLexQuery",
        "States": {
          "GetTotalDocsInNamespaceAndCreateBatchesForLexQuery": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke",
            "Parameters": {
              "Payload.$": "$",
              "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:A3BuildQueryBatches"
            },
            "ResultSelector": {
              "total_docs_in_namespace.$": "$.Payload.total_docs_in_namespace",
              "batch_index.$": "$.Payload.batch_index"
            },
            "ResultPath": "$.namespace_info_and_query_batches",
            "TimeoutSeconds": 300,
            "Retry": [
              {
                "ErrorEquals": [
                  "Lambda.ServiceException",
                  "Lambda.AWSLambdaException",
                  "Lambda.SdkClientException"
                ],
                "IntervalSeconds": 2,
                "MaxAttempts": 5,
                "BackoffRate": 2
              }
            ],
            "Next": "QueryNamespaceInParallel"
          },
          "QueryNamespaceInParallel": {
            "Type": "Map",
            "ItemsPath": "$.namespace_info_and_query_batches.batch_index",
            "Parameters": {
              "total_docs_in_namespace.$": "$.namespace_info_and_query_batches.total_docs_in_namespace",
              "max_parallel_executions.$": "$.max_parallel_executions",
              "batch_index.$": "$$.Map.Item.Value",
              "query_batch_size.$": "$.query_batch_size"
            },
            "ResultPath": "$.query_namespace_in_parallel_output",
            "Next": "CalculateAndUpdateQueriedDocsInNamespace",
            "Iterator": {
              "StartAt": "QueryNamespace",
              "States": {
                "QueryNamespace": {
                  "Type": "Task",
                  "Resource": "arn:aws:states:::lambda:invoke",
                  "Parameters": {
                    "Payload.$": "$",
                    "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:QueryNamespace"
                  },
                  "ResultSelector": {
                    "total_docs_queried.$": "$.Payload.total_docs_queried",
                    "query_from_index.$": "$.Payload.query_from_index"
                  },
                  "ResultPath": "$.query_namespace_output",
                  "TimeoutSeconds": 300,
                  "Retry": [
                    {
                      "ErrorEquals": [
                        "Lambda.ServiceException",
                        "Lambda.AWSLambdaException",
                        "Lambda.SdkClientException"
                      ],
                      "IntervalSeconds": 2,
                      "MaxAttempts": 5,
                      "BackoffRate": 2
                    }
                  ],
                  "Next": "ShouldContinueQueryingNamespace"
                },
                "ShouldContinueQueryingNamespace": {
                  "Type": "Choice",
                  "Choices": [
                    {
                      "Comment": "Check if we need to continue querying namespace if we haven't reached the total docs",
                      "Variable": "$.query_namespace_output.query_from_index",
                      "NumericLessThanPath": "$.total_docs_in_namespace",
                      "Next": "QueryNamespace"
                    }
                  ],
                  "Default": "FilterTotalQueriedDocsPerBatch"
                },
                "FilterTotalQueriedDocsPerBatch": {
                  "Type": "Pass",
                  "OutputPath": "$.query_namespace_output.total_docs_queried",
                  "End": true
                }
              }
            }
          },
          "CalculateAndUpdateQueriedDocsInNamespace": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke",
            "Parameters": {
              "Payload.$": "$",
              "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:CalculateTotalQueriedDocsInNamespace"
            },
            "OutputPath": "$.Payload",
            "TimeoutSeconds": 300,
            "Retry": [
              {
                "ErrorEquals": [
                  "Lambda.ServiceException",
                  "Lambda.AWSLambdaException",
                  "Lambda.SdkClientException"
                ],
                "IntervalSeconds": 2,
                "MaxAttempts": 5,
                "BackoffRate": 2
              }
            ],
            "End": true
          }
        }
      },
      "Next": "CalculatePercentageOfAllQueriedDocs"
    },
    "CalculatePercentageOfAllQueriedDocs": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "Payload.$": "$",
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:CalculateTotalQueriedDocsInAllNamespaces"
      },
      "ResultSelector": {
        "job_iteration_count.$": "$.Payload.job_iteration_count",
        "should_fail_job.$": "$.Payload.should_fail_job",
        "should_retry_job.$": "$.Payload.should_retry_job",
        "total_docs_in_all_namespaces.$": "$.Payload.total_docs_in_all_namespaces",
        "total_queried_docs_in_all_namespaces.$": "$.Payload.total_queried_docs_in_all_namespaces"
      },
      "ResultPath": "$.all_namespace_calculation_output",
      "TimeoutSeconds": 300,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "ShouldRetryJob"
    },
    "ShouldRetryJob": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.all_namespace_calculation_output.should_retry_job",
          "BooleanEquals": true,
          "Next": "UpdateJobStatsForInstance",
          "Comment": "Retry Job"
        },
        {
          "Variable": "$.all_namespace_calculation_output.should_fail_job",
          "BooleanEquals": true,
          "Next": "JobFail"
        }
      ],
      "Default": "UpdateTotalDocsQueriedInJobStats"
    },
    "UpdateTotalDocsQueriedInJobStats": {
      "Type": "Task",
      "TimeoutSeconds": 15,
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "JobStats",
        "Key": {
          "JobId": {
            "S.$": "$$.Execution.Id"
          }
        },
        "UpdateExpression": "SET TotalDocsQueried = :val1",
        "ExpressionAttributeValues": {
          ":val1": {
            "N.$": "States.Format('{}', $.all_namespace_calculation_output.total_queried_docs_in_all_namespaces)"
          }
        }
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "CreateBatchesForDeltaDocs"
    },
    "CreateBatchesForDeltaDocs": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "ResultSelector": {
        "batch_index.$": "$.Payload.batch_index"
      },
      "ResultPath": "$.delta_batches_output",
      "Parameters": {
        "Payload": {
          "max_parallel_executions.$": "$.max_parallel_executions",
          "execution_name.$": "$$.Execution.Name"
        },
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:GetDeltaDocsAndCreateBatches"
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "AgreementDataTransformation"
    },
    "AgreementDataTransformation": {
      "Type": "Map",
      "ItemsPath": "$.delta_batches_output.batch_index",
      "ResultPath": null,
      "Parameters": {
        "batch_id.$": "$$.Map.Item.Value",
        "execution_name.$": "$$.Execution.Name"
      },
      "Iterator": {
        "StartAt": "GetDeltaDocsBatchInfo",
        "States": {
          "GetDeltaDocsBatchInfo": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke",
            "Parameters": {
              "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:GetDeltaDocBatchesInfo",
              "Payload.$": "$"
            },
            "Retry": [
              {
                "ErrorEquals": [
                  "Lambda.ServiceException",
                  "Lambda.AWSLambdaException",
                  "Lambda.SdkClientException"
                ],
                "IntervalSeconds": 2,
                "MaxAttempts": 5,
                "BackoffRate": 2
              }
            ],
            "ResultSelector": {
              "batch_number.$": "$.Payload.batch_number",
              "delta_docs_to_run.$": "$.Payload.delta_docs_to_run"
            },
            "ResultPath": "$.delta_docs_batch_info",
            "End": true
          }
        }
      },
      "Next": "UpdateAgreementHashes"
    },
    "UpdateAgreementHashes": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:UpdateAgreementHashes"
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "CreateJobDailyA3Data"
    },
    "CreateJobDailyA3Data": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:CreateJobDailyA3Data"
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "Next": "CleanupDailyJob"
    },
    "CleanupDailyJob": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:112757862110:function:CleanupDailyJob"
      },
      "ResultPath": null,
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "End": true
    },
    "JobFail": {
      "Type": "Pass",
      "End": true,
      "Comment": "placeholder - job fails and send notification to manager"
    }
  }
}